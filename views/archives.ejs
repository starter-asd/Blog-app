<div class="p-4">
	<h4 class="fst-italic">Archives</h4>
	<ol class="list-unstyled mb-0">
		<% if (locals.data) {
			const options = {
				year: 'numeric',
				month: 'long'
				};
			let periodo = null;
			data.forEach(function(dato){
				let fecha = new Date(dato.fecha).toLocaleDateString('en-US', options);
				if (periodo != fecha){
			%>
				<li><a href="#"><%=fecha %></a></li>
			<%	
					periodo = fecha;
				}
			});
		} %>
